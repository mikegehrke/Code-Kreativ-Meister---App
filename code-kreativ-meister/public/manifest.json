  "shortcuts": [
    {
      "name": "Video erstellen",
      "short_name": "Erstellen",
      "description": "Neues Video aufnehmen oder bearbeiten",
      "url": "/create",
      "icons": [
        {
          "src": "/icons/shortcut-create.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Live gehen",
      "short_name": "Live",
      "description": "Live-Stream starten",
      "url": "/go-live",
      "icons": [
        {
          "src": "/icons/shortcut-live.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Nachrichten",
      "short_name": "Chat",
      "description": "Private Nachrichten anzeigen",
      "url": "/inbox",
      "icons": [
        {
          "src": "/icons/shortcut-messages.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Stats",
      "description": "Performance-Statistiken anzeigen",
      "url": "/analytics",
      "icons": [
        {
          "src": "/icons/shortcut-analytics.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.codekreativmeister.app",
      "id": "com.codekreativmeister.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/code-kreativ-meister/id123456789",
      "id": "123456789"
    }
  ],
  
  "prefer_related_applications": false,
  
  "protocol_handlers": [
    {
      "protocol": "web+ckm",
      "url": "/share?url=%s"
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": ["image/*", "video/*", "audio/*"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/edit-video",
      "accept": {
        "video/*": [".mp4", ".webm", ".mov", ".avi"]
      }
    },
    {
      "action": "/edit-image",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
      }
    }
  ],
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "handle_links": "preferred",
  
  "capture_links": "existing-client-navigate"
}
